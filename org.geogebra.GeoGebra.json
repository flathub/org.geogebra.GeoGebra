{
    "app-id": "org.geogebra.GeoGebra",
    "base": "io.atom.electron.BaseApp",
    "base-version": "18.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "geogebra",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "geogebra",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dt /app/bin apply_extra geogebra",
                "install -Dm644 -t /app/share/metainfo org.geogebra.GeoGebra.appdata.xml",
                "install -Dm644 -t /app/share/applications org.geogebra.GeoGebra.desktop",
                "install -Dm644 -t /app/share/icons/hicolor/scalable/apps org.geogebra.GeoGebra.svg"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "unzip *.zip",
                        "rm *.zip",
                        "mv GeoGebra-linux-* geogebra",
                        "chmod -R 755 geogebra"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "geogebra",					
                    "commands": ["exec /app/extra/geogebra/GeoGebra \"$@\""]
                },
                {
                    "type": "file",
                    "path": "org.geogebra.GeoGebra.desktop"
                },
                {
                    "type": "file",
                    "path": "org.geogebra.GeoGebra.svg"
                },
                {
                    "type": "file",
                    "path": "org.geogebra.GeoGebra.appdata.xml"
                },
                {
                    "type": "extra-data",
                    "filename": "geogebra.zip",
                    "only-arches": ["arm", "arm64"],
                    "url": "https://download.geogebra.org/installers/6.0/GeoGebra-LinuxRPi3-Portable-6-0-487-0.zip",
                    "sha256": "a9c2823cabf2e9fbc3ef6f618524d54e72a827ecd9d4dfd68c200e044f1e5226",
                    "size": 61267217
                },   
                {
                    "type": "extra-data",
                    "filename": "geogebra.zip",
                    "only-arches": ["i386"],
                    "url": "https://download.geogebra.org/installers/6.0/GeoGebra-Linux32-Portable-6-0-487-0.zip",
                    "sha256": "f31de7aba1cc677ed9f8c673c51577ab807efce13a0a84f3eacd21510b3cb08c",
                    "size": 69319281
                },
                {
                    "type": "extra-data",
                    "filename": "geogebra.zip",
                    "only-arches": ["x86_64"],
                    "url": "https://download.geogebra.org/installers/6.0/GeoGebra-Linux64-Portable-6-0-487-0.zip",
                    "sha256": "95bcc76212b2c568d426a59efd7c4fdd8131719d39cd726252393fd1beb45d56",
                    "size": 68173161
                }
            ]
        }
    ]
}
